@model MVCBookStore.Models.Genre

@{
    ViewData["Title"] = "Details";
}

<h1>Genre Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GenreName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GenreName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Books)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Books != null)
            {
                @foreach (var books in Model.Books)
                {
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@books.BooksId">
                        @books.Books.Title
                    </a> <br />
                }
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }|
    <a asp-action="Index">Back to List</a>
</div>
